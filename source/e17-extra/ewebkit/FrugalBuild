# Compiling time: 15.49 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=ewebkit
_F_archive_name=webkit-efl
pkgver=164189
pkgrel=1
pkgdesc="Port of Webkit for E17"
url="http://trac.webkit.org/wiki/EFLWebKit"
depends=('atk' 'cairo' 'elementary' 'eeze' 'enchant' 'sqlite3' 'gst-plugins-base' 'libtiff' \
	 'libsoup' 'libxslt' 'libxt' 'gst1-plugins-base')
makedepends=('pkgconfig' 'perl' 'python' 'ruby>=2.1.2' 'gperf')
groups=('e17-extra')
archs=('i686' 'x86_64')
Finclude cmake
source=(http://download.enlightenment.org/rel/libs/webkit-efl/$_F_archive_name-$pkgver.tar.xz)
up2date="Flasttar http://download.enlightenment.org/rel/libs/webkit-efl/"
sha1sums=('1a90bd20d9b38b86566349163a72ffbd869dd1c2')

build()
{
	export CXXFLAGS="$CXXFLAGS -Wno-deprecated-declarations"
	Fcd efl-webkit
	CMake_make -DPORT=Efl -DSHARED_CORE=OFF -DCMAKE_BUILD_TYPE=Release \
                   -DCMAKE_INSTALL_PREFIX=/usr -DENABLE_WEBKIT=ON \
                   -DENABLE_WEBKIT2=OFF -DENABLE_TOOLS=OFF
	Fmakeinstall DESTDIR=$Fdestdir
}
