# Compiling Time: 20 SBU
# Maintainer: Melko <melko@frugalware.org>

options+=('asneeded')

pkgname=julia
pkgver=0.3.1
pkgrel=4
pkgdesc="High-level, high-performance dynamic programming language for technical computing."
depends=('libgfortran' 'fftw' 'gmp' 'llvm')
makedepends=('gcc-gfortran')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_github_tag="1"
_F_github_author="JuliaLang"
_F_github_ver="v$pkgver"
_F_github_devel=yes
_F_scm_tag="v$pkgver"
Finclude github

build() {
	Funpack_scm
	Fcd $pkgname
	Fmakeinstall prefix=$Fprefix sysconfdir=/etc \
		MARCH=${CARCH/_/-} \
		USE_SYSTEM_LLVM=1 \
		USE_SYSTEM_READLINE=1 \
		USE_SYSTEM_PCRE=1 \
		USE_SYSTEM_LIBM=1 \
		USE_SYSTEM_FFTW=1 \
		USE_SYSTEM_GMP=1 \
		USE_SYSTEM_MPFR=1 \
		USE_SYSTEM_ZLIB=1 \
		USE_MKL=0 \
		USE_LLVM_SHLIB=0
}

# optimization OK
