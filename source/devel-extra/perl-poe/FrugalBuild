pkgname=perl-poe
pkgver=1.365
pkgrel=1
pkgdesc="portable multitasking and networking framework for Perl"
_F_perl_name=POE
_F_perl_author=R/RC/RCAPUTO
Finclude perl
url="http://poe.perl.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('706587003f8cb2d1fbff8d82ac90e09eb30ee951')

build() {
	Fcd POE-$pkgver
        PERL_MM_USE_DEFAULT=1 perl Makefile.PL || Fdie
	make || Fdie
	Fmakeinstall
}
