pkgname=perl-poe
pkgver=1.364
pkgrel=1
pkgdesc="portable multitasking and networking framework for Perl"
_F_perl_name=POE
_F_perl_author=R/RC/RCAPUTO
Finclude perl
url="http://poe.perl.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')
sha1sums=('aa7e9d8ce7a1da337d9052d44b24b0e602045198')

build() {
	Fcd POE-$pkgver
        PERL_MM_USE_DEFAULT=1 perl Makefile.PL || Fdie
	make || Fdie
	Fmakeinstall
}
