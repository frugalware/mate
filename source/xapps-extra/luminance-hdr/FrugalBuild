groups=('xapps-extra')
depends=('exiv2>=0.24' 'openexr>=2.2.0' 'libgomp' 'fftw' 'gsl' 'libraw>=0.16' 'lcms2' 'libboost' 'libqt5concurrent' 'libqt5webkit')
makedepends=('boost' 'qt5')
replaces=('luminance')
_F_sourceforge_dirname="qtpfsgui"
_F_gnome_iconcache="y"
_F_sourceforge_ext=".tar.bz2"
_F_cmake_in_source_build="1"
Finclude sourceforge cmake gnome-scriptlet
