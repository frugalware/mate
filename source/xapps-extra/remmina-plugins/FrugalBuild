Finclude github cmake
source=("${source[@]}" freerdp-1.2.patch)
sha1sums=('8be095f181e2cbf9e799b955ec6b37b0210ab046' \
          '62e810fba562adf2c8fc4a25215ea33e8ec8332f')

subpkgs=("${subpkgs[@]}" 'remmina-vnc')
