# Compiling Time: 0.46 SBU
# Maintainer: crazy <crazy@frugalware.org>
# Contributor: geekitus <geekitus@tele2.fr>

pkgname=gtk-gnutella
pkgver=1.1.1
pkgrel=2
pkgdesc="Gtk-Gnutella is a clone of Gnutella"
depends=('gtk+2>=2.20.1' 'glib2' 'libxml2>=2.7.8' 'freetype2' 'libxau>=1.0.4-1' \
	'libxdmcp' 'dbus>=1.2.14-1' 'gnutls>=3.4.2' 'libxdamage>=1.1.1-3' 'libxext>=1.0.5-3')
archs=('i686' 'x86_64')
groups=('xapps-extra')
replaces=('apollon')
options=('scriptlet')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
sha1sums=('aa4f21fe758f7ac52c15ee0156247443ce8c7d6f')

build()
{
	unset MAKEFLAGS
	Fcd
	./Configure -Dccflags="$CFLAGS" -Dprefix=/usr -Dprivlib=/usr/share/gtk-gnutella \
		-Dofficial=true -Dgtkversion=2 -ders -U y
	make || return 1
	make install INSTALL_PREFIX=$Fdestdir || return 1
}



# optimization OK
