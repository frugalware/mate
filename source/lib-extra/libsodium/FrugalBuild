options+=('asneeded')

pkgname=libsodium
pkgver=1.0.3
pkgrel=1
url="https://github.com/jedisct1/libsodium"
archs=('x86_64' 'i686' 'arm')
groups=('lib-extra')
depends=('glibc')
makedepends=('ca-certificates')
pkgdesc="Sodium is a portable, cross-compilable, installable, packageable fork of NaCl"
up2date="Flasttar https://download.libsodium.org/libsodium/releases/"
source=("https://download.libsodium.org/$pkgname/releases/$pkgname-$pkgver.tar.gz")
signatures=("${source[0]}.sig")
