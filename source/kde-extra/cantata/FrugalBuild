_F_github_devel="yes"
_F_cmake_confopts="	-DENABLE_KDE=ON\
			-DENABLE_UDISKS2=ON\
			-DENABLE_HTTP_STREAM_PLAYBACK=ON\
			-DENABLE_LIBVLC=ON"
Finclude github cmake

build() {
	Funpack_scm
	CMake_build
}



