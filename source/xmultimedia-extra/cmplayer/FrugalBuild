# Compiling Time: 5.54 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=cmplayer
pkgver=0.6.2
extraver=1
pkgrel=2
pkgdesc="A multimedia player in Qt"
url="https://code.google.com/cmplayer"
depends=('libdvdnav>=5.0.1' 'libcdio' 'faad2' 'openal' 'libmad' 'libdv' 'libva' \
	 'libtheora' 'libvorbis' 'libdca' 'yasm' 'alsa-lib' \
	'xvidcore' 'a52dec' 'libqtdesigner' 'libqtopengl' 'libqtnetwork' \
	'libqtdbus' 'libqtuitools')
makedepends=('qt4-linguist' 'mesa' 'python-3.0')
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
_F_github_author="xylosper"
_F_github_tag="yes"
Finclude gnome-scriptlet github
Fpkgversep="/v"
groups=('xmultimedia-extra')
archs=('i686' 'x86_64')
sha1sums=('b4ded178a2a021dcc01287935bac0b95d9922bce')

build() {
	Fcd $pkgname-$pkgver
	./build-libchardet && ./build-sigar && ./build-libav && ./build-mplayer2 && \
	make PREFIX=/usr cmplayer || Fdie
	make DEST_DIR=$Fdestdir PREFIX=/usr install || Fdie
	Fbuild_gnome_scriptlet
}

# optimization OK
