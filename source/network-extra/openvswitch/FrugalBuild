#options+=('asneeded')

pkgname=openvswitch
pkgver=2.3
pkgrel=2
pkgdesc="a production quality, multilayer virtual switch"
archs=('i686' 'x86_64')
url=("http://openvswitch.org/")
license=('Apache')
depends=('python' 'openssl')
groups=('network-extra')
_F_github_author="openvswitch"
_F_github_name="ovs"
_F_github_tag="y"
_F_github_ver="v${pkgver}"
Finclude github
up2date="$up2date | sed 's/v//'"
_F_cd_path="$_F_github_name-$pkgver"
sha1sums=('9aa77b08fa2e32f3d1dbe4761adbe02adb50ec46')

build() {
	Fcd
	Fautoreconf
	Fbuild
}

# optimization OK
