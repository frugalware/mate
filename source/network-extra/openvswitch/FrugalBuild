#options+=('asneeded')

pkgname=openvswitch
pkgver=2.3.1
pkgrel=1
pkgdesc="a production quality, multilayer virtual switch"
archs=('i686' 'x86_64')
url=("http://openvswitch.org/")
license=('Apache')
depends=('python' 'openssl')
groups=('network-extra')
_F_github_author="openvswitch"
_F_github_name="ovs"
_F_github_tag="y"
_F_github_ver="v${pkgver}"
Finclude github
up2date="$up2date | sed 's/v//'"
_F_cd_path="$_F_github_name-$pkgver"
sha1sums=('67628db010d1afe267c36ae63bfafe40093dd5c9')

build() {
	Fcd
	Fautoreconf
	Fbuild
}

