options+=('asneeded')

pkgname=weechat
pkgver=1.0
pkgrel=1
pkgdesc="Fast, light & extensible IRC client."
url="http://www.weechat.org"
depends=('aspell' 'gnutls>=3.2.12.1' 'libgcrypt>=1.6.1' 'python>=2.7' 'lua' 'perl' 'curl')
makedepends=('ruby>=2.1.2' 'intltool')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date=("Flasttar ${url}/files/src/")
_F_gnome_iconcache="y"
source=(${url}/files/src/$pkgname-$pkgver.tar.gz)
Finclude cmake
sha1sums=('b57cf1cfb2e45c1ba37432035419fb8800af47f5')

build() {
	Fcd
	CMake_build
	Frm /usr/share/icons/
}
