pkgname=libxfont
_F_xorg_name=libXfont
pkgver=1.4.8
pkgrel=1
pkgdesc="X font Library"
url="http://xorg.freedesktop.org"
groups=('x11' 'xorg-core' 'xorg-libs')
archs=('i686' 'x86_64' 'arm')
depends=('xtrans>=1.2.3' 'libfontenc>=1.0.4-4' 'xproto>=7.0.15' 'fontsproto' 'freetype2')
makedepends=('pkgconfig' 'fontcacheproto')
Finclude xorg
Fconfopts+=" --enable-fc \
	--enable-freetype --enable-pcfformat --enable-bdfformat --enable-snfformat"

source=(${source[@]} fix-for-fontsproto213.patch)
sha1sums=('687746ba7e6d6064cb2b930e2dfe744603a5f85b' \
          '5495cd81d0d7ef7773c8f214ad50d21e258afed3')

build()
{
	Fcd
	Fsed 'fontsproto < 2\.1\.3' 'fontsproto' configure
	Fbuild
}

