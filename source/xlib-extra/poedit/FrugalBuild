pkgdesc="cross-platform gettext catalogs (.po files) editor"
license="MIT"
options=('scriptlet')
_F_github_tag=y
_F_github_tag_v=y
_F_github_author=vslavik
_F_github_ext="-oss.tar.gz"
Finclude github
url="http://www.poedit.net/"
groups=('xlib-extra')
archs=('i686' 'x86_64')
depends=('wxwidget' 'gtkspell>=2.0.16' 'db>=4.7.25' 'zip' 'lucene++')
