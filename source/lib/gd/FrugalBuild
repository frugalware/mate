pkgname=gd
pkgver=2.0.35
pkgrel=3
pkgdesc="an ansi C library to generate fancy images from programs"
url="http://libgd.github.io/"
depends=('libxml2>=2.7.8' 'fontconfig' 'libjpeg>=8a' 'libpng>=1.4.1' 'freetype2>=2.3.1')
groups=('lib')
archs=('i686' 'x86_64' 'arm')
_F_github_name="libgd"
_F_github_author="libgd"
_F_github_tag=y
_F_github_ver="gd-${pkgver}"
Finclude github
up2date="$up2date | sed 's/gd_//'"
source=(${source[@]} libpng14.diff)
sha1sums=('ccf34a610abff2dbf133a20c4d2a4aa94939018a' \
          '37324c7f6ff156b2b1e03a783f5cfdacfa7e4ad7')
build()
{
	Fcd
	Fautoreconf
	Fbuild
}
# optimization OK
